body
	background-color #000
	background: linear-gradient(to bottom right, #fff,#949599);
	animation: fadeIn 1s forwards
	margin 0 auto
	font-style: normal;
	font-size:16px;
	line-height:24px
	font-family: sans-serif;
	color #fff
img
	max-width 100%
html
	font-size: 62%;
	font-weight:500
*
	box-sizing:border-box;
.main,
	display flex
	width 100%
	justify-content center
	align-items center
	height 100vh
	background: linear-gradient(to bottom right, #fff,#949599);
	a
		padding 0px 20px
		display block
section,header,footer,article
	lost-utility: clearfix;
	position relative
.hide
	display none
.container
	lost-center: $large 30px
.logo
	display flex
	width 100%
	max-width 1400px
	justify-content center
	align-items center
	height 100vh
	margin: 0 auto;
	a
		display block
.slider-actif
	.logo
		display none
	.kill
		display inline-block
	.main
		display none
	.prev,
	.next
		display block
		max-width 80px
	.langue
		display none
	.return
		display inline-block
.accordion-actif
	.logo
		align-items: flex-start;
	.kill
		display inline-block
	.langue
		display none
.navigation
	position absolute
	z-index 10
	left 10px
	top 10px
	font-size 24px
	img
		max-width 60px
		cursor pointer
.return
	display none
.kill
	display none
.action
	//margin-bottom 20px
	cursor pointer
	position relative
	h1
		position: absolute;
		top: 0;
		left: 0;
		display: block;
		color: #000;
		background:linear-gradient(to right, rgba(255,255,255, 1), rgba(255,255,255, 0.8),rgba(255,255,255, 0));
		padding: 20px 120px 20px 20px;
		text-align: left;
	img
		    margin-bottom: 8px;
		    box-shadow: -1px 0px 40px grey;
.aquabrass
	display flex
	flex-direction row
	align-items center
	justify-content center
	.aquabrass_flex
		margin: 2px 6px;
.fiora
	display flex
	flex-direction row
	align-items center
	justify-content center
	margin-top: 14px;
	div
		//width 50%
		margin 40px
.simas
	display flex
	flex-wrap wrap
	flex-direction row
	align-items center
	justify-content center
	div
		margin: 2px 6px;
		width: 45%;
.next
	position: absolute;
	top: 50%;
	right: 10px;
	z-index: 150!important;
	cursor pointer
	display none
.prev
	position: absolute;
	top: 50%;
	left: 10px;
	z-index: 150!important;
	cursor pointer
	display none
.action-active
	text-decoration underline
.slider
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0px;
	left: 0px;
	z-index: 0;
	background-color: linear-gradient(to bottom right, #fff,#949599);
	span
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0px;
		left: 0px;
		color: transparent;
		background-size: cover;
		background-position: 50% 50%;
		background-repeat: no-repeat;
		visibility hidden
		opacity: 0;
		z-index: 0;
